<div class="container">
  <%= simple_form_for @recipe do |f| %>
  <div class="form-group">
    <%= f.input :name, class:"form-control" %>
  </div>
  <div class="form-group">
      <%= f.input :description, class:"form-control" %>
  </div>
    <%= f.input :avatar , as: :file %><br>
