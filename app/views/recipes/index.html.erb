

  <div class="container">
    <div class="row">
      <% @recipes.each do |recipe| %>
      <div class="col-xs-4">
        <div class="thumbnail">
          <%= link_to image_tag(recipe.avatar.url(:medium)), recipe_path(recipe) %>
          <div class="caption">
            <h3><%= recipe.name %></h3>
            <p><%= recipe.description %></p>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
