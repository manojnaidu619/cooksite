

  <div class="container">
    <div class="row">
      <% @recipes.each do |recipe| %>
      <div class="col-xs-4">
        <div class="thumbnail">
          <%= link_to image_tag(recipe.avatar.url(:medium)), recipe_path(recipe) %>
          <div class="caption">
            <h3 class="title"><%= recipe.name %></h3>
            <p class="desc"><%= recipe.description %></p>
            <%= link_to 'Edit', edit_recipe_path(recipe), class:"card-link" %>
            <%= link_to 'Delete', recipe_path(recipe), method: :delete, data: {confirm: "Are you sure?"}, class:"card-link delete" %>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
